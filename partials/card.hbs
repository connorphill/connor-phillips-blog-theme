{{!--
Re-usable card for linking to posts
--}}

<article class="{{post_class}}">
    <div class="flex my-10">
        <div class="sm:w-3/4">
            <div class="pl-5 pt-2 mr-3">
                {{#primary_tag}}
                <p class="text-gold-600 text-2xl">
                <a href="{{url}}" class="font-bold hover:text-gold-800 hover:underline">{{name}}</a> 
                </p>
                {{/primary_tag}}
                <a href="{{url}}">
                <h2 class="font-serif text-6xl pb-3 text-midnight-400 hover:text-midnight-800 mt-2">{{title}}</h2></a>
                <p><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="M/D/YYYY"}}</time> | {{reading_time}}</p>
                <p class="pt-1">{{excerpt}}</p>
            </div>
        </div>
        {{#if feature_image}}
        {{!-- hidden sm:flex --}}
        <div class=" hidden sm:w-1/4 sm:flex p-2">
            <a href="{{url}}"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
        </div>
        {{/if}}
    </div>
</article>